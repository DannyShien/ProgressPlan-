
<% if @item.class == Goal %>
  $("#<%= dom_id @item %>").find(".js-like-goal").toggleClass("is-liked");
  $("#<%= dom_id @item %>").find(".js-likes-sentence").replaceWith("<%= j render 'likes/likes_sentence', goal: @item %>"); 
<% else %>
  $("#<%= dom_id @item %>").find("a.js-like-task").toggleClass("is-liked");
<% end %>

<% if @item.class == Post %>
  $("#<%= dom_id @item %>").find(".js-like-post").toggleClass("is-liked");
  $("#<%= dom_id @item %>").find(".js-likes-sentence").replaceWith("<%= j render 'posts/likes_sentence', post: @item %>"); 

<% else %>
  $("#<%= dom_id @item %>").find("a.js-like-comment").toggleClass("is-liked");
<% end %>