<div class="card">
  <div class="card-content">             
    <% @incomplete_goals.each do |goal|%>
      <div class="card hidden" id="<%= dom_id goal %>">
        <div class="card-content">             
          <div><strong><%= goal.title %></strong></div>
        </div>          
        <% goal.tasks.each do |task| %>
          <%= task.title %>
        <% end %>          
      </div>
    <% end %>
  </div>
</div>

