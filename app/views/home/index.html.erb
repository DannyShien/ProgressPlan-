<% if current_user %>  
<div class="container">  
  <div class="columns">
    <div class="column is-5", style="background-color: lightyellow;">
      <aside class="menu">
        <div class="media">
          <div class="media-left">
            <div class="image is-128x128">
              <%= image_tag(current_user.image_url_or_default) %>
            </div>
          </div>
          <div class="media-content">   
            <h1 class="title"><%= current_user.name %></h1>
            <ul class="menu-list">
              <li><%= link_to icon("check-square-o", "Accomplish"), "#", class: "menu-item" %></li>
              <li><%= link_to icon("users", "Friends"), "#", class: "menu-item" %></li>               
            </ul>
          </div>
        </div>
        <div class="card">
          <div class="card-content">
            <h1 class="subtitle has-text-centered">GOALS TO ACHIEVE</h1>
            <ul class="menu-complete-list">
              <% @incomplete_goals.each do |goal| %>
                <%= render "home/goal_listing", goal: goal %>
              <% end %>
            </ul>
            <footer class="card-footer">
            <%= link_to "Add Goal", goals_path, class: "card-item js-show-modal is-outlined", remote: true %>
            </footer>
          </div>
        </div>
      </aside>
    </div>
    <%= render "goals/add_goals"  %>
    <div class="column is-7", style="background-color: light blue;">
      <div class="card">
        <div class="card-header">
          <h1 class="card-header-title">Self Evaluation</h1>
        </div>
        <div class="card-content">             
          <div class="field"> 
            <label class="label">What do you think you're good at?</label>
            <div class="control">
              <input class="input", placeholder="Enter text here..">
            </div>
            <label class="label">What can you improve on?</label> 
            <div class="control">
              <input class="input", placeholder= "Enter text here.."> 
            </div>
            <label class="label">What do you suck at?</label>
            <div class="control">
              <input class="input", placeholder="Enter text here..">
            </div>
            <div class="control">
              <%= link_to 'Edit', class: "card-item" %>
            </div>
          </div>
        </div>
      </div>  
      <div class="columns is-centered">
        <div class="column is-10", style="margin-top: 10px;">
          <% @completed_goals.each do |goal| %>
          <%= render "goals/goal_post", goal: goal %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
  
<% else %>
  <%= link_to "Create An Account", new_user_path, class: "button is-warning" %>
  <%= link_to "Log In", login_path, class: "navbar-item" %>
<% end %>