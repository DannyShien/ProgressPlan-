<% if current_user %>  
  <div class="container">  
    <div class="columns">
      <div class="column is-one-third", style="background-color: lightyellow;">
        <aside class="menu">
          <div class="media">
            <div class="media-left">
              <div class="image is-128x128">
                <%= image_tag(current_user.image_url_or_default) %>
              </div>
            </div>
            <div class="media-content">   
              <h1 class="title"><%= current_user.name %></h1>
            </div>
          </div>
          <ul class="menu-list">
            <li><%= link_to icon("check-square-o", "Accomplish"), "#", class: "menu-item" %>
            <li><%= link_to icon("users", "Friends"), "#", class: "menu-item" %>  
              <ul class="hidden">
                <%#<li><%= link_to icon("pencil", "Edit Profile"), "#", class: "menu-item" %> 
                <%#<li><%= link_to icon("sign-out", "Log Out"), "#", class: "menu-item" %>
              </ul>
            </li>               
          </ul>
          <div class="card">
            <div class="card-content">
              <h1 class="subtitle">Set Goals</h1>
              <%= link_to "Add Goal", goals_path, class: "card-item js-show-modal", remote: true %>
            </div>
          </div>
        </aside>
      </div>
      <div class="column is-two-thirds", style="background-color: light blue;">
        <div class="card">
          <div class="card-header">
            <h1 class="card-header-title">Self Evaluation</h1>
          </div>
          <div class="card-content">             
            <div class="field"> 
              <label class="label">What do you think you're good at?</label>
              <div class="control">
                <input class="input", placeholder="Enter text here..">
              </div>
              <label class="label">What can you improve on?</label> 
              <div class="control">
                <input class="input", placeholder= "Enter text here.."> 
              </div>
              <label class="label">What do you suck at?</label>
              <div class="control">
                <input class="input", placeholder="Enter text here..">
              </div>
              <div class="control">
                <%= link_to 'Edit', class: "card-item" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<div class="modal">
  <div class="modal-background">
    <div class="modal-card">
      <header class="modal-card-head">
        <p class="modal-card-title">Add Goal</p>
        <button class="delete" aria-label="close"></button>
      </header>
      <section class="modal-card-body">
        <%= form_for current_user.goals.build do |f| %>
          <div class="field">
            <label class="label">Title</label>
            <div class="control">
              <%= f.text_field :title, class: "input", placeholder: "Title" %>
            </div>
          </div>
          <div class="field">
            <label class="label">Notes</label>
            <div class="control">
              <%= f.text_area :note, class: "input-area", placeholder: "Goal details...", size: "103x8" %>
            </div>
          </div>
          <div class="field">
            <label class="label">Due Date</label>
            <div class="control">
              <%= f.text_field :due_date, class: "input", placeholder: "What's your goal?" %>
            </div>
          </div>
        <% end %>
      </section>
      <footer class="modal-card-foot">
        <div class="field is-grouped is-grouped-right">
          <div class="control">
            <button class="button is-info is-outlined">Submit</button>
          </div>
        </div>
      </footer>
    </div>
  </div>
  </div>


  
<% else %>
  <%= link_to "Create An Account", new_user_path, class: "button is-warning" %>
  <%= link_to "Log In", login_path, class: "navbar-item" %>
<% end %>
