<!-- Add tasks page -->
<div class="modal" id="add_task_goal_<%= goal.id %>">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">Add Task</p>
      <button class="delete" aria-label="close"></button>
    </header>
    <section class="modal-card-body">
    <%= form_for goal.tasks.build do |f| %>
      <div class="field">
        <label class="label">Title</label>
        <div class="control">
          <%= f.text_field :title, class: "input", placeholder: "Title" %>
        </div>
      </div>
      <%= f.hidden_field :goal_id, value: goal.id %>
    </section>
    <footer class="modal-card-foot">
      <div class="field">
        <div class="control">
          <%= f.submit "Submit", class: "button is-info is-outlined" %>
        </div>
      </div>
    </footer>
    <% end %>
  </div>
</div> 

