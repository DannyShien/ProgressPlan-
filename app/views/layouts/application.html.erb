<!DOCTYPE html>
<html>
  <head>
    <title>ProgressPlan</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar">
      <div class="container">
        <div class="navbar-brand">
          <a class="navbar-item" href="/">
            chatsesh
          </a> 
        <div class="navbar-menu">
          <div class="navbar-end">
              <% if current_user %>
                <%= link_to profile_user_path(current_user), class: "navbar-item" do %>
                  <%= image_tag current_user.image_url_or_default %>
                  &nbsp;<%= current_user.name %>
                <% end %>
                <%= link_to "Home", root_path, class: "navbar-item" %>
                
              <% else %>
                <%= link_to "Sign Up", new_user_path, class: "navbar-item" %>
                <%= link_to "Log In", login_path, class: "navbar-item" %>
              <% end %>
            </div>
          </div>  
        </div>
        </div>  
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
